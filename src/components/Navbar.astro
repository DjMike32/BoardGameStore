<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Poppins:wght@600&display=swap" rel="stylesheet">
<style>
  :root {
    --primary: #776fee;    /* Navbar oscuro */
    --secondary: #3B82F6;  /* Hover azul */
    --accent: #f15c21;     /* Naranja para categorÃ­as */
    --light: #ffffff;      /* Fondo general */
    --dark: #111827;       /* Texto principal */
  }

  body {
    margin:0;
    font-family: 'Inter', sans-serif;
    background: var(--light);
    color: var(--dark);
  }

  /* Navbar */
  .navbar {
    display:flex; justify-content:space-between; align-items:center;
    background: var(--primary);
    color:rgb(255, 255, 255);
    padding:0.8rem 1.5rem;
  }
  .navbar-left, .navbar-right { display:flex; align-items:center; gap:1rem;width:100 ;}
  .navbar h1 { font-family:'Poppins', sans-serif; font-size:1.5rem; margin:0;}
  .search-bar input { padding:0.4rem 0.6rem; border:none; border-radius:6px;width:30rem ;}
  .icon { cursor:pointer; font-size:1.2rem; transition:color 0.3s;}
  .icon:hover { color: var(--secondary);}

  /* Sidebar */
  .sidebar {
    position:fixed;
    top:0; left:0;
    width:250px; height:100%;
    background: var(--light);
    transform: translateX(-100%); /* Oculto inicialmente */
    transition: transform 0.3s ease;
    z-index:1000;
    box-shadow:2px 0 10px rgba(0, 0, 0, 0.1);
    padding:1rem;
  }
  .sidebar.active {
    transform: translateX(0);
  }
  .sidebar h2 { font-family:'Poppins', sans-serif; font-size:1.2rem; color:var(--primary); margin-top:0;}
  .sidebar a { display:block; padding:0.6rem 0; color: var(--dark); text-decoration:none; transition:color 0.3s;}
  .sidebar a:hover { color: var(--accent); }

  /* Overlay */
  .overlay { display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(194, 190, 190, 0.4); z-index:900;}
  .overlay.active { display:block;}
</style>
</head>
<body>

