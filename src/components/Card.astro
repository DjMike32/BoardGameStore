---
import "../styles/global.css";

const {title, description} = Astro.props;

---



<div class="card">	
	<h1>{title}</h1>
	<p>{description}</p>
</div>






<style>


	.card{
		background-color: rgb(50, 50, 50);
		border-radius: 5px;
		box-shadow: 0 0 10px rgb(0, 0, 0, 0.5);
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}

</style>
